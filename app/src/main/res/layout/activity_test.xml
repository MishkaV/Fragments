<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test">

    <ImageView
        android:id="@+id/homeImageUrl"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:scaleType="centerCrop"
        android:transitionName="kek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello world"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/homeImageUrl"
        app:layout_constraintStart_toStartOf="@+id/homeImageUrl"
        app:layout_constraintTop_toBottomOf="@+id/homeImageUrl" />
</androidx.constraintlayout.widget.ConstraintLayout>